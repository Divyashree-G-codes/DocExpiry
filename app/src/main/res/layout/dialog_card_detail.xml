<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivDialogPhoto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_user"
        android:contentDescription="@string/document_image" />

    <TextView
        android:id="@+id/tvDialogType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/document_type"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvDialogNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/document_number"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/btnDialogEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textColor="@color/design_default_color_primary"
            android:padding="8dp" />

        <TextView
            android:id="@+id/btnDialogShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:textColor="@color/design_default_color_primary"
            android:padding="8dp"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</LinearLayout>
